%h3 Log In
= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=>{:class => 'login_with_email_form'}) do |f|
  %p.input
    = f.email_field :email, :autofocus => true, :placeholder=>'Email'
  %p.input
    = f.password_field :password, :placeholder=>'Password'
  - if devise_mapping.rememberable?
    %p.input
      = f.check_box :remember_me, :style =>'display:inline'
      Remember Me
  %p.action
    .bootstrap-twitter
      = f.submit 'Log Me In', :class=>'btn btn-large btn-success', id: 'user_submit'
  - if devise_mapping.recoverable? && controller_name != 'passwords'
    %p.forgot_link
      = link_to "Forgot your password?", new_password_path(resource_name)