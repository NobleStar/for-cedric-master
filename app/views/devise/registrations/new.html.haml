- resource.newsletter = true
%h2 New to Idea Mobb
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'login_with_email_form'}) do |f|
  = devise_error_messages!
  %p.input
    = f.text_field :name, :autofocus => true, :placeholder => 'Full Name'
  %p.input
    = f.email_field :email, :autofocus => true, :placeholder => 'Email'
  %p.input
    = f.password_field :password, :placeholder => 'Password'
  %p.input
    = f.password_field :password_confirmation, :placeholder => 'Confirm Password'
  %p.input.check
    = f.check_box :newsletter, :style =>'display:inline'
    Yes I want the weekly newsletter
  %div
    = f.submit "Sign up", :class=> 'btn btn-large btn-success'
    .pull-right{:style=>'float:right; padding-right:100px;'}
      %span by signing up, you agree to IdeaMobb's
      %br
      %a terms and conditions

