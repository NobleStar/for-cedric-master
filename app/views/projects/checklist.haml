						=link_to "Verify Account", new_project_account_verify_path(@project)
					%li.step-tab.btn.last-tab.active{:style => "z-index: 60;"}
						=link_to "Checklist", static_pages_checklist_path
			.span2
				= link_to start_preview_project_path(@project.id) do
					%button.btn.btn-large{:style => "float:right;"}
						%i.icon-eye-open
						Review
