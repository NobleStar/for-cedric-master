			.span3#content-right
				.row-fluid#content-right-first-row
					.row-fluid
						.span6
							- if @owner_info
								- unless @owner_info.photo.blank?
									= image_tag("#{@owner_info.photo}")
						.span6
							%p Project by
							%h4
								- if @owner_info
									= @owner_info.name
							%p
								- if @owner_info
									= @owner_info.location
							= link_to "Contact me","mailto:#{current_user.email}"
					.row.hr-row
						%hr.hr-row
					.row-fluid						
						%p.content-right-first-row-bottom
							%strong Launched:
							= @project.created_at.strftime("%b %d, %Y")
						.row.hr-row
							%hr.hr-row
						%p.content-right-first-row-bottom
							%strong Funding ends:
							= (@project.created_at+@project.funding_deadline.to_i.days).strftime("%b %d, %Y")
						.row.hr-row
							%hr.hr-row
						%p.content-right-first-row-bottom
							%strong Website:
							- if @owner_info
								= @owner_info.website
						%center
							= link_to "See full bio", "#"
				.row-fluid#content-right-second-row
					- @rewards.each do |reward|
						%h4 Pledge #{reward.amount} or More
						%p
							= reward.name
							%br
							%br
							= reward.description
						.row.hr-row
							%hr.hr-row