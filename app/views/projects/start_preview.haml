.row#second-row
	.container
		.row
			.span10
				%ul.nav-pills{:style => "margin-left: 0px;"}
					%li.step-tab.btn.selected{:style => "z-index: 100;"}
						=link_to "Getting Started", static_pages_getting_started_path
					%li.step-tab.btn.selected{:style => "z-index: 90;"}
						=link_to "Project Profile & Donation Rewards", edit_project_path(@project)
					%li.step-tab.btn.selected{:style => "z-index: 80;"}
						- if @owner_info
							=link_to "Owner Information", edit_project_owner_info_path(@project, @project.owner_info)
						- else
							= link_to "Owner Information", new_project_owner_info_path(@project)
					%li.step-tab.btn.selected{:style => "z-index: 70;"}
						=link_to "Verify Account", new_project_account_verify_path(@project)
					%li.step-tab.btn.last-tab.selected{:style => "z-index: 60;"}
						=link_to "Checklist", checklist_project_path(@project)
			.span2
				%button.btn.btn-large#btn-review
					%i.icon-eye-open
					Review
.row#start-preview-third-row
	.container
		%h3 
			%center
				= @project.title
		.row.span4.offset4
			.row.hr-row
				%hr.hr-row{style:"width:83%;"}
		%center#by
			by:
			- if @owner_info
				= @owner_info.name

.row#start-preview-fourth-row
	.container#content
		.row#content-header{style:"background-color:white;"}
			.row-fluid
				.span2.offset1
					%h4 Sponsors
				.span3
					%h4 Amount Pledged						
				.span2.offset1
					%h4 Days left
			.row-fluid
				.span2.offset1
					%h4 0
				.span3
					%h4 
						$0 out of 
						= number_to_currency(@project.goal)
					.progress.progress-striped.active
						.bar{style:"width: 20%;"}
				.span2.offset1
					%h4
						= @project.funding_deadline
		.row#main-content
			.span8#content-left
				- if @owner_info and !@owner_info.video_url.blank?
					.row-fluid#content-left-first-row
						= @owner_info.video_url_html
					

					.row-fluid#content-left-second-row
						.span5
							%button.btn#btn-like
								%i.icon-thumbs-up
								Like
							%span{style: "font-size:80%;"} 976 people like this.Be the first of your friends.							
						.span2
							%button.btn#btn-tweet
								%i.icon-twitter							
								Tweet
						.span5
							%button.btn.btn-small#btn-embed <>Embed
							%input{type:"text", placeholder: @owner_info.video_url, style:"width:150px;margin-bottom: 0px;"}
				.row.hr-row
					%hr.hr-row
				.row-fluid#content-left-third-row
					%p
						- if @owner_info
							= @owner_info.description
					- unless @project.image.blank?
						= image_tag("#{@project.image}")
