!!!
%html
	%head
		%title IdeaMobb
		/[if lt IE 9]
			<script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>

		= stylesheet_link_tag		"application", :media => "all"
		= stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css"
		
		
		= stylesheet_link_tag		"ideamobb", :media => "all"
		= javascript_include_tag "application"
		%link{:href => "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.8/themes/ui-lightness/jquery-ui.css", :rel => "stylesheet", :type => "text/css"}
		
		= csrf_meta_tags
		
		%meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/



	%body
		= render 'layouts/navigation'
		#main{role: 'Main'}
			.container
				.row
					.span12
						= yield
		= render 'layouts/footer'
